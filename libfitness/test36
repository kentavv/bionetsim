int
main() {
  int b[2, 3, 7];

  for(int i=0, n=0; i<2; i++) {
    for(int j=0; j<3; j++) {
      for(int k=0; k<7; k++) {
        b[i,j,k] = n;
        print << i << "\t" << j << "\t" << k << "\t" << n << "\n";
        n++;
      }
    }
  }
  for(int i=0, n=0; i<2; i++) {
    for(int j=0; j<3; j++) {
      for(int k=0; k<7; k++) {
        print << b[i,j,k] << "\n";
      }
    }
  }
}

